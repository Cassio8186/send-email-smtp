{
	"parser": "@typescript-eslint/parser",
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": "plugin:@typescript-eslint/recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"for-direction": "error",
		"no-unused-vars": "warn",
		"no-unused-expressions": "warn",
		"no-unused-labels": "warn"
	}
}
